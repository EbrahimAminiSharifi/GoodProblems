public class simpleSearchArray {
public static int indexOf(int[] array, int x) {
        for (int i = 0; i < array.length; i++) {
            if (array[i] == x) {
                return i;
            }
        }
        return -1;
    }
    public static void main(String[] args) {
        System.out.println(indexOf(new int[]{1, 1, 1, 10, 5, 3, 4, 2}, 3));
    }
}
